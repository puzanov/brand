<h3>Listing articles</h3>

<table>
  <tr>
    <th>Title</th>
    <th>Brief</th>
    <th>Image</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.brief %></td>
    <td><%= article.image %></td>
    <td><%= article.type %></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

