- @product.each() do |row|
  %h3
    = row["NAME"]
.img_container
  - if !@image_link.nil?
    - @image_link.each() do |row|
      %img{:src => "http://qwerty.kg/upload/" + row["SUBDIR"] + "/" + row["FILE_NAME"], :width => "300px", :height => "225px"}
.price_container
  - if !@product_price.nil?
    Наша цена
    - @product_price.each() do |row|
      = row["PRICE"].to_s + " " + row["CURRENCY"].to_s
%h3 
  Описание
- @product.each() do |row|
  = raw(row["DETAIL_TEXT"])
  - @product_row_name = row["NAME"]

#properties
  %h3
    Характеристики
  %table
    %tbody
      - @properties.each() do |row|    
        %tr
          %td
            = row["NAME"]
          %td
            = row["VALUE"] 

.search
  .yandex 
    = link_to "Посмотреть информацию о товаре в Яндексе", "http://yandex.ru/yandsearch?text=" +@product_row_name
  .google 
    = link_to "Посмотреть информацию о товаре в Google", "http://www.google.ru/search?ie=UTF-8&hl=ru&q=" + @product_row_name
            
