
%p= link_to t('.new_user'), new_user_path

%table
  %thead
    %tr
      %th= User.human_attribute_name :login
      %th= User.human_attribute_name :password
      %th= User.human_attribute_name :name
      %th= User.human_attribute_name :role
      %th= User.human_attribute_name :userpic
      %th= User.human_attribute_name :email
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for user in @users
      %tr{ :class => cycle(:odd, :even) }
        %td= user.login
        %td= user.password
        %td= user.name
        %td= user.role
        %td= user.userpic
        %td= user.email
        %td.action= link_to t('show'), user
        %td.action= link_to t('edit'), edit_user_path(user)
        %td.action= link_to t('destroy'), user, :confirm => t('are_you_sure', :default => 'Are you sure?'), :method => :delete

