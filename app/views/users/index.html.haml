%h3 Пользователи
.admin
  = link_to t('Создать нового пользователя'), new_user_path

%table
  %thead
    %tr
      %th Логин
      %th Имя
      %th Роль
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for user in @users
      %tr{ :class => cycle(:odd, :even) }
        %td= user.login
        %td= user.name
        %td= user.role
        %td.action= link_to t('show'), user
        %td.action= link_to t('edit'), edit_user_path(user)
        %td.action= link_to t('destroy'), user, :confirm => t('are_you_sure', :default => 'Are you sure?'), :method => :delete

