
%p
  = link_to t('back'), users_path
  = link_to t('edit'), edit_user_path(@user)

%dl
  %dt= User.human_attribute_name :login
  %dd= @user.login
  %dt= User.human_attribute_name :password
  %dd= @user.password
  %dt= User.human_attribute_name :name
  %dd= @user.name
  %dt= User.human_attribute_name :role
  %dd= @user.role
  %dt= User.human_attribute_name :userpic
  %dd= @user.userpic
  %dt= User.human_attribute_name :email
  %dd= @user.email
